@model AstroWorld.Areas.Admin.Models.Book.GetAllBooksViewModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="m-1">All Books</h1>

<p>
    <a class="btn btn-outline-success" asp-action="Create">Create New Book</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                User
            </th>
            <th>
                Draft   
            </th>
            <th>
                Created At
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Books) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Draft)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                <form asp-area="Admin" asp-controller="Book" asp-action="Delete" asp-route-id="@item.Id" method="post">
                    <a asp-area="Admin" asp-controller="Book" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>|

                    <a asp-area="Admin" asp-controller="Book" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>|
                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this book: @item.Name')">Delete</button>
                </form>

               
            </td>
        </tr>
}
    </tbody>
</table>
