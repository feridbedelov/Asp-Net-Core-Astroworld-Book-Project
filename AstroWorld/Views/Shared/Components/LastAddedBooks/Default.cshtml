@model List<Book>
@{
    ViewData["Title"] = "Default";
}

<h4 class="alert alert-success">Last Added Books</h4>
@foreach (var item in Model)
{
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">@item.Name</h5>
            <h6 class="card-subtitle mb-2 text-muted"> Author : @item.Author </h6>
            <p class="card-text">Release Year : @item.ReleaseYear.Year </p>
            <a asp-action="Details" asp-controller="Book" asp-route-id="@item.Id" class="card-link">Learn More</a>
            
        </div>
    </div>
    <br />
}

