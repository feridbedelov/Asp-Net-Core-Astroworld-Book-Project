@model CategoryListViewModel
<h3>Categories</h3>

<ul class="list-group">
    <a asp-controller="Book" asp-action="Index" class="list-group-item list-group-item-action">
        All
    </a>

    @foreach (var category in Model.Categories)
    {
        <a asp-controller="Book" asp-action="GetBookByCategory" asp-route-id="@category.Id" class="list-group-item list-group-item-action">
            @category.Name
        </a>
    }



</ul>

